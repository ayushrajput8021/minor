{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2021"],                     
    "allowJs": true,
    "outDir": "./build",                          
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "files": ["src/types.d.ts"]
}
